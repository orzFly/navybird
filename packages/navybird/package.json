{
  "name": "navybird",
  "version": "0.2.0",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "author": "Yeechan Lu",
  "devDependencies": {
    "@navybird/build": "*",
    "clarify": "^2.1.0",
    "mocha": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.12",
    "trace": "^3.1.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  },
  "nyc": {
    "source-map": true,
    "produce-source-map": true,
    "require": [
      "source-map-support/register"
    ]
  },
  "scripts": {
    "test": "nyc mocha",
    "coverage": "mkdir -p coverage && nyc report --reporter=text-lcov > coverage/main.lcov.txt",
    "build": "run-s build:codegen build:typescript",
    "build:codegen": "node ../navybird-build/dist",
    "build:typescript": "tsc",
    "watch": "tsc -w",
    "cleanbuild": "run-s clean build",
    "cleanwatch": "run-s clean watch",
    "clean": "rimraf dist .nyc_output coverage"
  }
}
